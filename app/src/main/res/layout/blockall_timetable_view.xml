<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arcibald160.callblocker.tools.Tab3Fragment">>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_view_row_height">
        <TextView
            android:id="@+id/blocktime_from_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="16dp"
            android:text="8:00"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/divider_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/blocktime_from_id"
            android:layout_alignTop="@+id/blocktime_from_id"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/blocktime_from_id"
            android:layout_toRightOf="@+id/blocktime_from_id"
            android:textSize="30sp"
            android:text="-" />

        <TextView
            android:id="@+id/blocktime_until_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/divider_id"
            android:layout_alignTop="@+id/divider_id"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/divider_id"
            android:layout_toRightOf="@+id/divider_id"
            android:textSize="30sp"
            android:text="12:00" />

        <Switch
            android:id="@+id/blockall_toggle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/blocktime_until_id"
            android:layout_alignTop="@+id/blocktime_until_id"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@+id/blocktime_until_id"
            android:layout_toRightOf="@+id/blocktime_until_id" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

</LinearLayout>